<div class= "container_form">
<h2 class="home_title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "form_label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form_label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form_input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class=" check_form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<div class="buttons_login"> 
  <div class="actions btn btn-primary">
    <%= f.submit "Log in", style: "border: none; background: none; background-color: none; color:#cfd8dd; letter-spacing: 2px"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>